/* pages/homepage/homepage.wxss */
page {
  background: #409EFF;
}

.title {
  position: absolute;
  left: 50rpx;
  top: 70rpx;
  font-size: 50px;
  font-weight: 400;
  /* color: #409EFF; */
  color: #FFFFFF;
}

.title-icon {
  position: absolute;
  right: 80rpx;
  top: 120rpx;
}

.body {
  display: flex;
  flex-direction: column;
  align-items: center;
  overflow: hidden;
}

.index-body {
  margin-top: 250rpx;
  background: #FFFFFF;
  width: 100%;
  height: 2000rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-radius: 50px 50px 0 0;
  box-shadow: 0 -14rpx 10rpx rgba(0, 0, 0, 0.2);
}

.indexButton {
  margin-top: 150rpx;
  width: 400rpx;
  height: 400rpx;
  border-radius: 50%;
  background: #409EFF;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  border: 10rpx #FFFFFF solid;
  color: #FFFFFF;
  font-weight: 600;
}

.navigate-group {
  margin: 170rpx auto;
  margin-bottom: 100rpx;
  display: flex;
  flex-direction: row;
}

.navigate-tap {
  width: 200rpx;
  text-align: center;
  color: #409EFF;
  font-weight: 500;
  padding: 15rpx 30rpx;
  background: #FFFFFF;
  border: 1rpx #409EFF solid;
  border-radius: 10rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.2);
}

.right {
  height: 100%;
  padding: 50rpx;
  width: 350rpx;
}

.right-title {
  font-size: 40rpx;
  color: #303133;
  margin-bottom: 100rpx;
}

.right-item {
  font-size: 35rpx;
  color: #303133;
  margin-bottom: 50rpx;
  padding-bottom: 20rpx;
  text-align: right;
  border-bottom: 1px #409EFF solid;
}
