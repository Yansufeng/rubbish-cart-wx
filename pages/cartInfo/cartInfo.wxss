.myMap {
  width: 100%;
  z-index: 1;
}

.content {
  width: 100%;
  border-radius: 30px 30px 0 0;
  /* margin-top: -30px; */
  background: white;
  box-shadow: 0 -14rpx 10rpx rgba(0, 0, 0, 0.2);
  z-index: 999;
  -webkit-transition: all 1s;
  transition: all 1s;
}

.gray-line {
  margin: 12px 44%;
  background: #909399;
  height: 6px;
  border-radius: 3px;
}

.content-title {
  font-size: 25px;
  color: #303133;
  margin: 10px 20px;
  font-weight: 600;
}

.content-item {
  margin: 20px 0;
}

.item-icon {
  width: 20px;
  height: 20px;
  padding: 10px;
  border: 2px solid #C0C4CC;
  border-radius: 50%;
  margin-left: 20px;
  float: left;
}

.item-body {
  margin-left: 90px;
}

.item-name {
  font-size: 20px;
}

.item-load {
  color: #909399;
}